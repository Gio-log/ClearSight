QWidget {
    background-color: #f0f0f0;
    color: #000000;
    font-family: Arial, sans-serif;
    font-size: 12px;
}

QPushButton {
    background-color: #0078d7;
    color: #ffffff;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
}

QPushButton:hover {
    background-color: #005a9e;
}

QLineEdit {
    border: 1px solid #cccccc;
    padding: 3px;
    border-radius: 3px;
}